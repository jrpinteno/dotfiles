[include]
	path = ~/.gitconfig.local

[core]
	pager = diff-so-fancy | less --tabs=3 -RF
	editor = vim

[status]
	submoduleSummary = true

[alias]
	logg = log --graph --decorate --oneline --all
	dfs = diff --staged
	main = checkout main
	master = checkout master
	dev = checkout develop
	soft = reset --soft HEAD^
